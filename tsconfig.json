{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@styles": [
        "./styles",
        "./styles/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@constants/*": [
        "./constants/*"
      ],
      "@store": [
        "./store",
        "./store/*"
      ],
      "@services": [
        "./services/*"
      ],
      "@components": [
        "./components/*"
      ],
      "@utils": [
        "./utils/*"
      ],
      "@assets": [
        "./assets/*"
      ]
    }
  }
}